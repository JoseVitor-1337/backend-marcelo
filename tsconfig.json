{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "allowJs": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@config/*": ["./src/config/*"],
      "@models/*": ["./src/models/*"],
      "@middleware/*": ["./src/middleware/*"],
      "@usecases/*": ["./src/usecases/*"],
      "@domain/*": ["src/domain/*"],
      "@protocols/*": ["./src/protocols/*"]
    }
  }
}
